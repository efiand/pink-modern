<ul class="togglers {{ togglers.mix }}">
  {% for toggler in range(1, togglers.length + 1) %}
    <li class="togglers__item">
      <button class="togglers__control {{ 'togglers__control--active' if loop.index == togglers.activeIndex }}" type="button">
        <span class="visually-hidden">
          {{ togglers.title }} {{ loop.index }}
        </span>
      </button>
    </li>
  {% endfor %}
</ul>
