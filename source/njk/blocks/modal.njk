<section class="modal">
  <h2 class="modal__title">{{ modal.title }}</h2>
  <p class="modal__text">{{ modal.text }}</p>

  <footer class="modal__footer {{ 'modal__footer--alter' if modal.alter }}">
    <button class="button modal__button" type="button">{{ modal.buttonText }}</button>
  </footer>
</section>
